<UserControl x:Class="QRTestWpf.Views.BorrowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             xmlns:local="clr-namespace:QRTestWpf.Views"
             Dialog:DialogParticipation.Register="{Binding}"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="450"
             Background="#FFA500"
             >
    <!--둥근 버튼-->
    <UserControl.Resources>
        <Style TargetType="Button">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Style.Resources>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="146*"/>
            <RowDefinition Height="317*"/>
            <RowDefinition Height="93*"/>
            <RowDefinition Height="144*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"  >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Image Source="/Resources/check-mark.png" Height="60" />
                <TextBlock Foreground="White" VerticalAlignment="Center" FontSize="30" FontWeight="Bold" Margin="10">
                    감사합니다
                </TextBlock>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Image Source="/Resources/book.png" Margin="30"/>
        </Grid>

        <Grid Grid.Row="2">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock FontWeight="Bold" Foreground="White" FontSize="25" Margin="0,0,0,10" VerticalAlignment="Center" HorizontalAlignment="Center">
                    반납일은
                </TextBlock>
                <TextBlock Foreground="White" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"
                           Text="{Binding RetrunDay,StringFormat={}{0}일 입니다.}">
                </TextBlock>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="3">
            <Button Grid.Row="1" Content="Thank You" FontSize="25" Height="60" Margin="10" FontWeight="Bold"
            Background="#FFFFFF" BorderBrush="#FF9B17" Foreground="#FF9B17"
            Command="{Binding ThxCommand}"/>

        </Grid>



    </Grid>




</UserControl>
